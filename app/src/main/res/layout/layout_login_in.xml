<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uber_clone_splash_logo"
    android:padding="16dp"
    >
    <!-- Linearlayout area button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:padding="0dp"
        >
        <!-- Buttons -->
        <!-- Button.AUTH.Phone -->
        <Button
            android:id="@+id/firebase_button_auth_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="10dp"
            android:text="@string/login_in_button_firebase_auth_phone"
            android:drawableStart="@drawable/icon_button_phone"
            android:paddingStart="10dp"
            android:textColor="@color/colorLoginInAuthPhoneColorText"
            android:background="@drawable/login_in_button_auth_phone_background_selected"
            android:textSize="14sp" />

        <!-- Button.AUTH.Email -->
        <Button
            android:id="@+id/firebase_button_auth_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="10dp"
            android:text="@string/login_in_button_firebase_auth_email"
            android:textColor="@color/colorLoginInAuthEmailColorText"
            android:background="@drawable/login_in_button_auth_email_background_selected"
            android:paddingStart="10dp"
            android:drawableStart="@drawable/icon_button_google_24dp"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>